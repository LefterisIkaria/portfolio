---
import type { HTMLAttributes } from "astro/types";

type LinkProps = HTMLAttributes<"a"> & {
  href: string | URL;
};

type ButtonProps = HTMLAttributes<"button"> & {
  href?: null | undefined;
};

type Props = LinkProps | ButtonProps;

const { href = undefined, class: classes, ...rest } = Astro.props;
---

{
  href ? (
    <a href={href} class:list={[classes]} {...(rest as HTMLAttributes<"a">)}>
      <slot />
    </a>
  ) : (
    <button class:list={[classes]} {...(rest as HTMLAttributes<"button">)}>
      <slot />
    </button>
  )
}

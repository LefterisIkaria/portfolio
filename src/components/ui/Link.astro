---
import type { HTMLAttributes } from "astro/types";

interface Props extends HTMLAttributes<"a"> {}

const { class: classes, ...rest } = Astro.props;
---

<a
  {...rest}
  class:list={[
    "font-medium transition-colors duration-150 hover:text-default-100 decoration-dashed underline underline-offset-8",
    classes,
  ]}
>
  <slot />
</a>

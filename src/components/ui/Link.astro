---
import type { HTMLAttributes } from "astro/types";

interface Props extends HTMLAttributes<"a"> {
  variant?: "default" | "primary";
}

const { class: classes, variant = "default", ...rest } = Astro.props;
---

<a
  {...rest}
  class:list={[
    "flex items-center gap-1 font-medium transition-colors duration-150 border-b border-default border-dashed",
    {
      "hover:text-default-100 hover:border-default-100": variant === "default",
    },
    {
      "text-primary brightness-95 hover:brightness-125": variant === "primary",
    },
    classes,
  ]}
>
  <slot />
</a>

---
import type { HTMLAttributes } from "astro/types";

interface Props extends HTMLAttributes<"a"> {
  variant?: "default" | "primary";
}

const { class: classes, variant = "default", ...rest } = Astro.props;
---

<a
  {...rest}
  class:list={[
    "font-medium transition-colors duration-150  decoration-dashed underline underline-offset-8",
    { "hover:text-default-100": variant === "default" },
    {
      "text-primary brightness-95 hover:hover:brightness-125":
        variant === "primary",
    },
    classes,
  ]}
>
  <slot />
</a>
